doctype html
html(lang='en')
        body(style='background-color: #2b3e50; color:white;')
            <p>
            .topTitle(style='color:orange',align='center')
                | <strong> API Query </strong>
            .box
                .container-1
                    form#searchButton(action='http://localhost:3000/API', method='GET')
                        <p>
                        label(for='keyword')<strong> <span> KeyWord : </span></strong>
                        input#search(type='Search', placeholder='keyword..', name = 'keyword')
                        =' '

                        label(for='category')<strong> <span> Category : </span></strong>
                        input#search(type='Search', placeholder='category..', name = 'category')
                        =' '
                        br
                        <p>
                        label(for='protocols')<span><strong>Protocol : </strong><span>
                        input#search(type='Search', placeholder='protocol..', name = 'protocols')
                        =' '
                        label(for='rating')<strong>Rating : </strong>
                        =' '
                        select#search(name='selectparam')
                            option(value='select') Select
                            option(value='lessthan',name='lessthan') Less than
                            option(value='greaterthan',name='greaterthan') Greater than 
                            option(value='equalto',name='equalto') Equal to
                        =' '
                        input#search(type='Search', placeholder='rating..', name = 'rating')
                        =' '
                        br
                        <p>
                        label(for='updated')<p><strong> Updated Year : </strong>
                        input#search(type='Search', placeholder='updated..', name = 'updated')
                        =' '
                        label(for='rating')<strong>Tag : </strong>
                        input#search(type='Search', placeholder='tag..', name = 'tag')
                        =' '
                        br
                        <p>
                        button.searchButton(type='Search', value='Search',style='color:#0084b4') Search

                    table(border='5', width='100%', cellpadding='0', cellspacing='0')
                        tr(align='CENTER')   
                            th(colspan='10')
                                br
                                h3 API QUERY          
                        tr(style='color:orange')
                            th Select
                            th Name
                            th Summary
                            th Description
                            th Category
                            th Protocol
                            th Tag
                            th Rating
                            th Updated Year
                        
                        each item in list
                            tr
                                td(align='center')
                                    button
                                        a(href= "ApiInfo?id=#{item._id}") Select
                                td #{item.name}
                                td #{item.summary}
                                td(width='30%') #{item.description}
                                td #{item.category}
                                td #{item.protocols}
                                td(width='10%') #{item.tag}
                                td #{item.rating}
                                td #{item.updated}